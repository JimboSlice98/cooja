#!/bin/sh

app_path=$0

# Resolve symbolic links to get the actual application path
while
    APP_HOME=${app_path%"${app_path##*/}"}
    [ -h "$app_path" ]
do
    ls=$( ls -ld "$app_path" )
    link=${ls#*' -> '}
    case $link in             
      /*)   app_path=$link ;; 
      *)    app_path=$APP_HOME$link ;;
    esac
done

APP_BASE_NAME=${0##*/}
APP_HOME=$( cd "${APP_HOME:-./}" > /dev/null && pwd -P ) || exit

MAX_FD=maximum

warn () {
    echo "$*"
} >&2

die () {
    echo
    echo "$*"
    echo
    exit 1
} >&2

cygwin=false
msys=false
darwin=false
nonstop=false
case "$( uname )" in                
  CYGWIN* )         cygwin=true  ;; 
  Darwin* )         darwin=true  ;; 
  MSYS* | MINGW* )  msys=true    ;; 
  NONSTOP* )        nonstop=true ;;
esac

CLASSPATH=$APP_HOME/gradle/wrapper/gradle-wrapper.jar

# Determine the Java command to use to start the JVM
if [ -n "$JAVA_HOME" ] ; then
    if [ -x "$JAVA_HOME/jre/sh/java" ] ; then
        JAVACMD=$JAVA_HOME/jre/sh/java
    else
        JAVACMD=$JAVA_HOME/bin/java
    fi
    if [ ! -x "$JAVACMD" ] ; then
        die "ERROR: JAVA_HOME is set to an invalid directory: $JAVA_HOME

Please set the JAVA_HOME variable in your environment to match the
location of your Java installation."
    fi
else
    JAVACMD=java
    if ! command -v java >/dev/null 2>&1
    then
        die "ERROR: JAVA_HOME is not set and no 'java' command could be found in your PATH.

Please set the JAVA_HOME variable in your environment to match the
location of your Java installation."
    fi
fi

# Increase the maximum file descriptors if possible
if ! "$cygwin" && ! "$darwin" && ! "$nonstop" ; then
    case $MAX_FD in 
      max*)
        MAX_FD=$( ulimit -H -n ) ||
            warn "Could not query maximum file descriptor limit"
    esac
    case $MAX_FD in  
      '' | soft) :;; 
      *)
        ulimit -n "$MAX_FD" ||
            warn "Could not set maximum file descriptor limit to $MAX_FD"
    esac
fi

# Set or reuse directories in /tmp
GRADLE_USER_HOME="/tmp/gradle-user-home-$(hostname)"
PROJECT_CACHE_DIR="/tmp/gradle-project-cache-$(hostname)"
BUILD_DIR="/tmp/gradle-build-dir-$(hostname)"

[ ! -d "$GRADLE_USER_HOME" ] && mkdir -p "$GRADLE_USER_HOME" && echo "Created new Gradle user home at $GRADLE_USER_HOME" || echo "Reusing existing Gradle user home at $GRADLE_USER_HOME"
[ ! -d "$PROJECT_CACHE_DIR" ] && mkdir -p "$PROJECT_CACHE_DIR" && echo "Created new Gradle project cache at $PROJECT_CACHE_DIR" || echo "Reusing existing Gradle project cache at $PROJECT_CACHE_DIR"

# Always copy the build directory
rm -rf "$BUILD_DIR"
mkdir -p "$BUILD_DIR"
cp -r "$APP_HOME/"* "$BUILD_DIR" 2>/dev/null
echo "Copied build files to new build directory at $BUILD_DIR"

trap "" EXIT

if "$cygwin" || "$msys" ; then
    APP_HOME=$( cygpath --path --mixed "$APP_HOME" )
    CLASSPATH=$( cygpath --path --mixed "$CLASSPATH" )

    JAVACMD=$( cygpath --unix "$JAVACMD" )

    for arg do
        if
            case $arg in                                
              -*)   false ;;                            
              /?*)  t=${arg#/} t=/${t%%/*}              
                    [ -e "$t" ] ;;                      
              *)    false ;;
            esac
        then
            arg=$( cygpath --path --ignore --mixed "$arg" )
        fi
        shift                   
        set -- "$@" "$arg"      
    done
fi

DEFAULT_JVM_OPTS='"-Xmx64m" "-Xms64m"'

# Build the project
./gradlew --project-cache-dir "$PROJECT_CACHE_DIR" --gradle-user-home "$GRADLE_USER_HOME" build

set -- \
        "-Dorg.gradle.appname=$APP_BASE_NAME" \
        -classpath "$CLASSPATH" \
        org.gradle.wrapper.GradleWrapperMain \
        --project-cache-dir "$PROJECT_CACHE_DIR" \
        --daemon \
        -p "$BUILD_DIR" \
        "$@"

if ! command -v xargs >/dev/null 2>&1
then
    die "xargs is not available"
fi

eval "set -- $(
        printf '%s\n' "$DEFAULT_JVM_OPTS $JAVA_OPTS $GRADLE_OPTS" |
        xargs -n1 |
        sed ' s~[^-[:alnum:]+,./:=@_]~\\&~g; ' |
        tr '\n' ' '
    )" '"$@"'

# Debug: Print Classpath
echo "Classpath: $CLASSPATH"

# Set the GRADLE_USER_HOME environment variable
export GRADLE_USER_HOME

exec "$JAVACMD" "$@"
